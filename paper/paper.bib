@article{sunagawa_2020,
title = {Tara Oceans: towards global ocean ecosystems biology.},
author = {Sunagawa, Shinichi and Acinas, Silvia G and Bork, Peer and Bowler, Chris and Tara Oceans Coordinators and Eveillard, Damien and Gorsky, Gabriel and Guidi, Lionel and Iudicone, Daniele and Karsenti, Eric and Lombard, Fabien and Ogata, Hiroyuki and Pesant, Stephane and Sullivan, Matthew B and Wincker, Patrick and de Vargas, Colomban},
