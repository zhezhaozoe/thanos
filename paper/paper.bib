@article{delaney_1990,
title = {A {grpE} mutant of Escherichia coli is more resistant to heat than the wild-type.},
author = {Delaney, J M},
pages = {797-801},
url = {http://dx.doi.org/10.1099/00221287-136-5-797},
year = {1990},
