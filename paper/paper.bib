@article{brockhurst_2019,
title = {The ecology and evolution of pangenomes.},
author = {Brockhurst, Michael A and Harrison, Ellie and Hall, James P J and Richards, Thomas and {McNally}, Alan and {MacLean}, Craig},
pages = {R1094-R1103},
url = {https://linkinghub.elsevier.com/retrieve/pii/S0960982219310280},
year = {2019},
